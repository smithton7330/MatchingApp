<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragment.join.GenderSelectFragment">

        <RadioGroup
            android:id="@+id/height_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/height_150"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150" />

            <RadioButton
                android:id="@+id/height_160"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="160" />

            <RadioButton
                android:id="@+id/height_170"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="170" />

            <RadioButton
                android:id="@+id/height_180"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="180" />

        </RadioGroup>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/height_select_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="next"/>
    </LinearLayout>

</layout>
